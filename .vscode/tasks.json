{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "Grunt build",
            "command": "grunt",
            "options": {
                "cwd": "${workspaceFolder}/assets/",
            }
        },
        {
            "type": "shell",
            "label": "supervist-ctl: CI.isort",
            "command": "source env/bin/activate && supervisr-ctl ci.isort",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "supervist-ctl: CI.lint",
            "command": "source env/bin/activate && supervisr-ctl ci.lint",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
