{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${workspaceFolder}/env/scripts/python",
      "program": "${workspaceFolder}/manage.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "runserver",
        "--noreload",
        "--nothreading"
      ],
      "debugOptions": [
        "RedirectOutput",
        "DjangoDebugging"
      ]
    }
  ]
}