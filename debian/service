[Unit]
Description=supervisr
After=syslog.target network.target
Requires=network.target

[Service]
User=supervisr
Group=supervisr
WorkingDirectory=/usr/share/supervisr
Type=simple
ExecStart=/usr/bin/supervisr-ctl utils.run
Environment=SUPERVISR_LOCAL_SETTINGS=config

[Install]
WantedBy=multi-user.target

